<h1>Login</h1>

<% flash[:message] if flash[:message] %>

<%= form_for :user do |f|%>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Login"%>
  <br>
<% end %>

<p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>